{
  "name": "cypress-jenkins-js",
  "version": "1.0.0",
  "description": "Automação Cypress + Jenkins - JS puro",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless --browser chrome",
    "cy:run:headless": "cypress run --headless --browser chrome",
    "test": "cypress run --headless --browser chrome --config video=false,screenshotOnRunFailure=false -- --no-sandbox --disable-gpu --disable-dev-shm-usage",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > mochawesome.json",
    "report:generate": "marge mochawesome.json --reportDir mochawesome-report --inline",
    "report:clean": "rm -rf mochawesome.json mochawesome-report cypress/reports",
    "test:full": "npm run report:clean && npm run test && npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "cypress": "^13.15.0",
    "cypress-mochawesome-reporter": "^3.7.2",
    "mochawesome": "^7.1.2",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
